@model cafepoject.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-4">
    <h2 class="display-6 mb-4 text-danger">Delete Customer</h2>

    <p class="lead">Are you sure you want to delete this customer?</p>

    <div class="shadow-sm p-4 border rounded bg-light">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 fw-bold">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="CustomerId" />

        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancel
        </a>
    </form>
</div>
