@model cafepoject.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <h2 class="display-6 mb-4">Customer Details</h2>

    <div class="shadow-sm p-4 border rounded bg-light">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 fw-bold">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
