@model IEnumerable<cafepoject.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="display-6">Customers List</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Add New Customer
        </a>
    </div>

    <table class="table table-hover table-striped shadow-sm border rounded">
        <thead class="table-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-info btn-sm me-1">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-warning btn-sm me-1">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
