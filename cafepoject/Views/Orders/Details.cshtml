@model cafepoject.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Orders Details</h1>

<div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Order Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.OrderDate)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.CustomerId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CustomerId)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.ProductId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProductId)
            </dd>

            <!-- Add other properties as needed -->
        </dl>
    </div>
    <div class="card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model?.OrderId" class="btn btn-warning mx-2">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary mx-2">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
